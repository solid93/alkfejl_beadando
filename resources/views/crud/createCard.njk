{% extends 'master' %}

{% block content %}
    {% include 'components.navbar' %}

    <div class="container lg-margin-top">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="panel panel-default">
                    <div class="panel-heading">Új teendő</div>
                    <div class="panel-body">
                        {{ form.open({action: 'CardController.create', method: 'POST', class: 'form-horizontal'}) }}

                        {{ csrfField }}

                        <div class="form-group">
                            {{ form.hidden('id') }}
                        </div>

                        <div class="form-group">
                            {{ form.label('title', 'Megnevezés:', { class:'col-md-4 control-label'}) }}
                            <div class="col-md-6">
                                {{ form.text('title', '', { class:'form-control'}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            {{ form.label('body', 'Leírás:',{ class:'col-md-4 control-label'}) }}
                            <div class="col-md-6">
                                {{ form.textarea('body', '',{ class:'form-control'}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-6 col-md-offset-4">
                                {{ form.button('Elküld', 'submit', { class:'btn btn-primary'}) }}
                            </div>
                        </div>


                        {{ form.close() }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}