{% extends 'master' %}

{% block content %}

    {% include 'components.navbar' %}

    <div class="container lg-margin-top">
        <div>
            <h1>Todo lista</h1>
            <a class="btn btn-default" href="/create-task" role="button">Új tennivaló</a>
        </div>

        {% if tasks[0] %}
            {% for task in tasks %}
                {% include 'components.task-card' %}
            {% endfor %}

        {% else %}
            <div>Jelenleg nincs semmi teendőd!</div>

        {% endif %}

    </div>

{% endblock %}